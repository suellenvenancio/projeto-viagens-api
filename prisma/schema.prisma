 
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())
  name String
  email String @unique
  password String 
  createdAt DateTime @default(now())  
  updatedAt DateTime @updatedAt
  flights Flights[]
  hotels Hotels[]
  attractions Attractions[]
  sessions Sessions[]

  @@map("users")
}

model Sessions {
  id        String   @id @default(uuid())
  token     String   @unique 
  user      Users     @relation(fields: [userId], references: [id])
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sessions")
} 
model Attractions {
  id    String      @id @default(uuid())
  name  String
  city  String
  price Float
  user       Users     @relation(fields: [userId], references: [id])
  userId     String
  visitDate DateTime @map("visit_date")

  @@map("attractions")
}

model Flights {
  id            String       @id @default(uuid())
  airline       String
  flightNumber  String   @map("flight_number")
  origin        String
  destination   String
  userId     String
  user       Users     @relation(fields: [userId], references: [id]) 
  departureDate DateTime   @map("departure_date")
  arrivalDate   DateTime   @map("arrival_date")
  price         Float

  @@map("flights")
}

model Hotels {
  id      String     @id @default(uuid())
  name    String
  address String
  checkIn DateTime @map("check_in")
  checkOut DateTime @map("check_out")
  pricePerNight   Float
  userId     String
  user       Users     @relation(fields: [userId], references: [id]) 

  @@map("hotels")
}

